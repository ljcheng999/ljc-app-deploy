name: "docker build and push for ljc-deploy"

on:
  push:
    tags:
      - "*"

# Env variable
env:
  DOCKER_USER: ${{secrets.DOCKER_USER}}
  DOCKER_PASSWORD: ${{secrets.DOCKER_PASSWORD}}
  DOCKER_REPO_NAME: ${{secrets.DOCKER_REPO_NAME}}
  REPO_NAME: ${{secrets.REPO_NAME}}
  TARGETOS: linux
  TARGETARCH: amd64
  DOCKERFILE_PATH: images/ljc-deploy
  DEFAULT_DOCKERFILE_NAME: Dockerfile

jobs:
  docker-ljc-deploy-push-image: # job name
    runs-on: ubuntu-latest # runner name : (ubuntu latest version)
    steps:
      - uses: actions/checkout@v2 # first action : checkout source code

      - name: Set ENV variables
        run: |
          echo "GITHUB_REPO_NAME=${GITHUB_REPOSITORY#$GITHUB_REPOSITORY_OWNER/}" >> $GITHUB_ENV

      - name: docker login
        run: | # log into docker hub account
          docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
          echo "GITHUB_REPO_NAME - $GITHUB_REPO_NAME"
          echo "GITHUB_TAG_NAME - ${{  github.ref_name }}"

      - name: Build the Docker image # push The image to the docker hub
        run: |
          docker buildx build --platform=${TARGETOS}/${TARGETARCH} -f images/${GITHUB_REPO_NAME}/${DEFAULT_DOCKERFILE_NAME} \
            --build-arg TARGETOS=${TARGETOS} \
            --build-arg TARGETARCH=${TARGETARCH} \
            -t $(DOCKER_REPO_NAME):${{  github.ref_name }} .
          docker images

      # - name: Docker Push
      #   run: docker push $(DOCKER_REPO_NAME):$(DOCKER_TAG)
